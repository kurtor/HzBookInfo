	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationStyle":"default", 
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	        "color": "#7A7E83",
	        "selectedColor": "#3cc51f",
	        "borderStyle": "black",
	        "backgroundColor": "#ffffff",
	        "list": [{
	            "pagePath": "pages/index/index",
	            "iconPath": "static/tabIcon/home-outline.png",
	            "selectedIconPath": "static/tabIcon/home-outline-active.png",
	            "text": "首页"
	        }, {
	            "pagePath": "pages/account/account",
	            "iconPath": "static/tabIcon/person-outline.png",
	            "selectedIconPath": "static/tabIcon/person-outline-active.png",
